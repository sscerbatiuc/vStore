<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Mercedes Store{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mercedesvstore/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mercedesvstore/css/style.css') }}"/>
    {% endblock %}
</head>
<body>
    {% block body %}
    <div id="wrapper">
        <div class="logo">
            <div id="logo_img"></div>
        </div>
        <div class="menu">
            <div id="navigationContainer">
                <ul class="nav nav-tabs nav-justified navigationButtons">
                    {# CHECK WHICH ELEMENT FROM THE MENU SHOULD  #}
                    <li {% if activeMenuItem == 'home' %} class="active" {% endif %}>
                        <a href="{{ path("homepage") }}">Homepage</a></li>
                    <li {% if activeMenuItem == 'cars' %} class="active" {% endif %}>
                        <a href="{{ path("selectClass") }}">Cars</a></li>
                    <li {% if activeMenuItem == 'spec' %} class="active" {% endif %}>
                        <a href="{{ path("viewSpecifications") }}">Specifications</a></li>
                    <li {% if activeMenuItem == 'discount' %} class="active" {% endif %}>
                        <a href="{{ path("viewDiscountOptions") }}">Discount</a></li>
                </ul>
            </div>
        </div>
        <div class="contentContainer">
            <div id="content">

                {% block content %}
                    <br/>
                {# PAGE CONTENT WILL BE HERE #}
                {% endblock %}

            </div>
        </div>
        <div class="footer">
            <div id="footerContent"></div>
        </div>
    </div>
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('bundles/mercedesvstore/js/jquery-1.11.3.min.js') }}"></script>
        <script src="{{ asset('bundles/mercedesvstore/js/script.js') }}"></script>
    {% endblock %}
</body>
</html>
